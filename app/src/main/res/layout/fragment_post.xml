<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fullLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".presentation.mainActivity.post.PostFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/upload_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scrool"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            >
            <EditText
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/black_white_rect_bg"
                android:ems="10"
                android:hint="TITLE"
                android:gravity="center"
                android:textColorHint="#99000000"
                android:fontFamily="@font/titillium_web_regular"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <EditText
                android:id="@+id/description"
                style="@style/DescStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:background="@drawable/black_white_rect_bg"
                android:hint="Description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/publish_post_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_rect_bg"
                android:text="Publish"
                android:textAllCaps="false"
                android:textAppearance="@style/SubTitleStyle"
                android:textColor="@color/white"
                app:backgroundTint="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent" />
            <ProgressBar
                android:id="@+id/progressBarButton"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:layout_marginTop="50dp"
                />
            <TextView
                android:id="@+id/tagTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:fontFamily="@font/bree_serif_regular"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                />
            <ImageView
                android:src="@drawable/ic_baseline_add_circle_24"
                app:layout_constraintStart_toEndOf="@+id/tagTextView"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:layout_marginTop="12dp"
                android:layout_marginStart="6dp"
                android:id="@+id/addTagImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/addTagImage"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>