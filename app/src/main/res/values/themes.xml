<resources>
    <!-- Base application theme. -->
    <style name="Theme.FirebaseSmsChatWithMvvm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DescStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ChipTextStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TitleStyle">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>